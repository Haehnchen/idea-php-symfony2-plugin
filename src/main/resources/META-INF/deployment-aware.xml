<idea-plugin url="https://www.jetbrains.com/idea">
    <actions>

        <action id="SymfonyWebDeploymentDownload"
                class="fr.adrienbrault.idea.symfonyplugin.webDeployment.actions.SymfonyWebDeploymentDownloadAction">

            <add-to-group group-id="PublishGroup" anchor="after" relative-to-action="PublishGroup.Download"/>
            <add-to-group group-id="RemoteHostViewPopupMenu" anchor="after" relative-to-action="PublishGroup.Download"/>
        </action>

    </actions>

    <extensions defaultExtensionNs="fr.adrienbrault.idea.symfonyplugin.extension">
        <RoutingLoader implementation="fr.adrienbrault.idea.symfonyplugin.webDeployment.routing.WebDeploymentRoutingLoader"/>
        <CompiledServiceBuilderFactory implementation="fr.adrienbrault.idea.symfonyplugin.webDeployment.container.RemoteCompiledServiceContainerLoader"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>fr.adrienbrault.idea.symfonyplugin.webDeployment.WebDeploymentProjectComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>
